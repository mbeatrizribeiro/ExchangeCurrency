@model ExchangeCurrency.Api.Models.Request.ProfileRequest

@{
    ViewData["Title"] = "Index";
}

<h4>Parametrização de taxas por Perfil</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Parametrizar" asp-controller="TaxPerProfile" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="form-floating mb-3" placeholder="Perfil" data-sb-validations="required">
                    <div class="form-group">
                        <label asp-for="Profile">Perfil</label>
                        <select asp-for="Profile" class="form-control select2-hidden-accessible" data-select2-id="select2-data-perfil" tabindex="-1" aria-hidden="true"><option value="Varejo">Varejo</option><option value="Personnalite">Personnalite</option><option value="Private">Private</option></select><span class="select2 select2-container select2-container--bootstrap" dir="ltr" data-select2-id="select2-data-1-nhy6" style="width: 326px;"><span class="selection"><span class="select2-selection select2-selection--single" role="combobox" aria-haspopup="true" aria-expanded="false" tabindex="0" aria-disabled="false" aria-labelledby="select2-moeda_origem-container"><span class="select2-selection__rendered" id="select2-moeda_origem-container" role="textbox" aria-readonly="true"></span> </span><span class="select2-selection__arrow" role="presentation"><b role="presentation"></b></span></span></span><span class="dropdown-wrapper" aria-hidden="true"></span>
                    </div>
                </div>
            </div>

            <div class="form-floating mb-3" placeholder="Taxa" data-sb-validations="required">
                <div class="form-gorup">
                    <label asp-for="Tax">Valor da Taxa</label>
                    <input asp-for="Tax" class="form-control"/>
                </div>
            </div>

            <div>
                <button class="btn btn-primary" type="submit" id="parametrizar">
                    Parametrizar
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
